---
import Layout from '../layouts/Layout.astro';
import { PhoenixButton } from '../components/PhoenixButton';
import { PhoenixCard } from '../components/PhoenixCard';
import { PhoenixBadge } from '../components/PhoenixBadge';
import { PhoenixNavbar } from '../components/PhoenixNavbar';
import { PhoenixDialog } from '../components/PhoenixDialog';
import { PhoenixInput } from '../components/PhoenixInput';
import { PhoenixCheckbox } from '../components/PhoenixCheckbox';
import { PhoenixRadioGroup } from '../components/PhoenixRadioGroup';
import { PhoenixSelect } from '../components/PhoenixSelect';
import { PhoenixTextarea } from '../components/PhoenixTextarea';
import { PhoenixSwitch } from '../components/PhoenixSwitch';
import { PhoenixSlider } from '../components/PhoenixSlider';
import { PhoenixTable } from '../components/PhoenixTable';

const navItems = [
  { label: "Home", href: "/" },
  { label: "Components", href: "/components", subItems: [
    { label: "Button", href: "/components/button" },
    { label: "Card", href: "/components/card" },
    { label: "Badge", href: "/components/badge" },
    { label: "Dialog", href: "/components/dialog" },
    { label: "Input", href: "/components/input" },
    { label: "Checkbox", href: "/components/checkbox" },
    { label: "Radio Group", href: "/components/radio-group" },
    { label: "Select", href: "/components/select" },
    { label: "Textarea", href: "/components/textarea" },
    { label: "Switch", href: "/components/switch" },
    { label: "Slider", href: "/components/slider" },
    { label: "Table", href: "/components/table" },
  ]},
  { label: "About", href: "/about" },
];

const radioOptions = [
  { value: "option1", label: "Option 1" },
  { value: "option2", label: "Option 2" },
  { value: "option3", label: "Option 3" },
];

const selectOptions = [
  { value: "apple", label: "Apple" },
  { value: "banana", label: "Banana" },
  { value: "grape", label: "Grape" },
];

const tableHeaders = ["Name", "Age", "City"];
const tableData = [
  ["John Doe", "30", "New York"],
  ["Jane Smith", "25", "London"],
  ["Peter Jones", "35", "Paris"],
];
---

<Layout title="Welcome to Astro.">
	<PhoenixNavbar client:load items={navItems} />
	<main class="p-4">
		<h1 class="text-4xl font-bold mb-4"><span class="text-gradient">Astro</span></h1>
		<div class="flex flex-col gap-4">
			<PhoenixButton client:load text="Click Me" onClick={() => alert('Button clicked!')} />
			<PhoenixCard client:load title="My Card Title" description="This is a description for my card." content="Here is some content for the card." footer="Card Footer" />
			<PhoenixBadge client:load text="New Feature" variant="default" />
			<PhoenixDialog client:load triggerText="Open Dialog" title="Dialog Title" description="This is a dialog description." content="This is the content of the dialog." />
			<PhoenixInput client:load label="Your Name" placeholder="Enter your name" />
			<PhoenixCheckbox client:load id="terms" label="Accept terms and conditions" />
			<PhoenixRadioGroup client:load label="Select an option" options={radioOptions} defaultValue="option1" />
			<PhoenixSelect client:load label="Favorite Fruit" placeholder="Select a fruit" options={selectOptions} />
			<PhoenixTextarea client:load label="Your Message" placeholder="Type your message here." />
			<PhoenixSwitch client:load id="airplane-mode" label="Airplane Mode" />
			<PhoenixSlider client:load label="Volume" defaultValue={[50]} max={100} step={1} />
			<PhoenixTable client:load caption="User Data" headers={tableHeaders} data={tableData} />
		</div>
	</main>
</Layout>