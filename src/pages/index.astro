---
import Layout from '../layouts/Layout.astro';
import { DPSGButton } from '../components/DPSGButton';
import { DPSGCard } from '../components/DPSGCard';
import { DPSGBadge } from '../components/DPSGBadge';
import { DPSGNavbar } from '../components/DPSGNavbar';
import { DPSGDialog } from '../components/DPSGDialog';
import { DPSGInput } from '../components/DPSGInput';
import { DPSGCheckbox } from '../components/DPSGCheckbox';
import { DPSGRadioGroup } from '../components/DPSGRadioGroup';
import { DPSGSelect } from '../components/DPSGSelect';
import { DPSGTextarea } from '../components/DPSGTextarea';
import { DPSGSwith } from '../components/DPSGSwith';
import { DPSGSilder } from '../components/DPSGSilder';
import { DPSGTable } from '../components/DPSGTable';

const navItems = [
  { label: "Home", href: "/" },
  { label: "Components", href: "/components", subItems: [
    { label: "Button", href: "/components/button" },
    { label: "Card", href: "/components/card" },
    { label: "Badge", href: "/components/badge" },
    { label: "Dialog", href: "/components/dialog" },
    { label: "Input", href: "/components/input" },
    { label: "Checkbox", href: "/components/checkbox" },
    { label: "Radio Group", href: "/components/radio-group" },
    { label: "Select", href: "/components/select" },
    { label: "Textarea", href: "/components/textarea" },
    { label: "Switch", href: "/components/switch" },
    { label: "Slider", href: "/components/slider" },
    { label: "Table", href: "/components/table" },
  ]},
  { label: "About", href: "/about" },
];

const radioOptions = [
  { value: "option1", label: "Option 1" },
  { value: "option2", label: "Option 2" },
  { value: "option3", label: "Option 3" },
];

const selectOptions = [
  { value: "apple", label: "Apple" },
  { value: "banana", label: "Banana" },
  { value: "grape", label: "Grape" },
];

const tableHeaders = ["Name", "Age", "City"];
const tableData = [
  ["John Doe", "30", "New York"],
  ["Jane Smith", "25", "London"],
  ["Peter Jones", "35", "Paris"],
];
---

<Layout title="Welcome to Astro.">
	<DPSGNavbar client:load items={navItems} />
	<main class="p-4">
		<h1 class="text-4xl font-bold mb-4"><span class="text-gradient">Astro</span></h1>
		<div class="flex flex-col gap-4">
			<DPSGButton client:load text="Click Me" onClick={() => alert('Button clicked!')} />
			<DPSGCard client:load title="My Card Title" description="This is a description for my card." content="Here is some content for the card." footer="Card Footer" />
			<DPSGBadge client:load text="New Feature" variant="default" />
			<DPSGDialog client:load triggerText="Open Dialog" title="Dialog Title" description="This is a dialog description." content="This is the content of the dialog." />
			<DPSGInput client:load label="Your Name" placeholder="Enter your name" />
			<DPSGCheckbox client:load id="terms" label="Accept terms and conditions" />
			<DPSGRadioGroup client:load label="Select an option" options={radioOptions} defaultValue="option1" />
			<DPSGSelect client:load label="Favorite Fruit" placeholder="Select a fruit" options={selectOptions} />
			<DPSGTextarea client:load label="Your Message" placeholder="Type your message here." />
			<DPSGSwith client:load id="airplane-mode" label="Airplane Mode" />
			<DPSGSilder client:load label="Volume" defaultValue={[50]} max={100} step={1} />
			<DPSGTable client:load caption="User Data" headers={tableHeaders} data={tableData} />
		</div>
	</main>
</Layout>
